{
  "name": "vite-react-typescript-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev-db": "npx supabase start",
    "dev-full": "npx supabase start & vite",
    "prebuild": "npm run types:gen",
    "types:gen": "node scripts/generate-types.mjs",
    "build": "vite build",
    "vite-build": "vite build",
    "lint": "eslint . --no-cache",
    "lint-fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "check": "npm run -s lint && npm run -s typecheck && npm run -s vite-build",
    "preview": "vite preview",
    "preview-https": "vite preview --host --https",
    "e2e": "node ./scripts/e2e.mjs",
    "db-gen-types-local": "supabase gen types typescript --local --schema public > src/lib/database.types.ts",
    "db-gen-types-remote": "supabase gen types typescript --project-id $env:SUPABASE_PROJECT_ID --schema public > src/lib/database.types.ts",
    "db-reset-local": "npx supabase db reset --local",
    "prepare": "npx husky",
    "db-push-local": "npx supabase db push --local",
    "db-push-prod": "npx supabase db push",
    "db-push-all": "npx supabase db push --local && npx supabase db push"
  },
  "dependencies": {
    "@fontsource/geist-mono": "^5.2.6",
    "@fontsource/geist-sans": "^5.2.5",
    "@hookform/resolvers": "^5.2.1",
    "@supabase/supabase-js": "^2.54.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "firebase": "^12.0.0",
    "framer-motion": "^11.18.2",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.61.1",
    "react-router-dom": "^7.7.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.9.0",
    "husky": "^9.1.7",
    "prettier": "^3.3.3",
    "eslint-config-prettier": "^9.1.0",
    "lint-staged": "^15.2.9",
    "lightningcss": "^1.30.1",
    "postcss": "^8.4.35",
    "supabase": "^2.34.3",
    "tailwindcss": "^3.4.1",
    "typescript": "5.5.4",
    "typescript-eslint": "^8.3.0",
    "vite": "^7.1.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  }
}
